doctype html
html
  head
    =stylesheet_link_tag 'mail'
    =yield :email_action
    div[itemprop="publisher" itemscope="" itemtype="http://schema.org/Organization"]
      meta[content="Argu" itemprop="name"]
      link[href="https://argu.co" itemprop="url"]
      link itemprop="url/googlePlus" href="https://plus.google.com/"
  body.mail-body
    table.mail-wrapper
      tr.mail-header
        td
        td.mail-header-container
          img.mail-header-logo[src='https://s3.eu-central-1.amazonaws.com/argu-static/logos/logo_wot_486x207.png' width="96" height="41"]
        td
      tr.mail-margin-top
      tr
        td
        td.mail-center-column
          =yield
        td
      tr.mail-margin-bottom
      - if show_footer?
        tr.mail-footer-padding
          td
          td.mail-center
          td
        tr.mail-footer
          td
          td.mail-center
            table
              tr
                td.mail-p.small
                  =t('layout.too_many_notifications') + ' '
                  =link_to t('layout.adjust_settings'), "https://#{Rails.configuration.host_name}/settings?tab=notifications"
              tr
                td.mail-hidden
                  =t('layout.sent_at_date', date: Time.current.utc.strftime('%Y-%m-%d %H:%M:%S'))
          td
