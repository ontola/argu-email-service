table
  tr
    td.mail-box
      table
        =greeting_row
        tr
          td.mail-p= I18n.t('templates.reset_password_instructions.someone_requested')
        tr
          td.mail-p= I18n.t('templates.reset_password_instructions.ignore')
  tr
    td.mail-button--alt
      table
        tr
          td= link_to I18n.t('templates.reset_password_instructions.confirm_link'), expand_uri_template(:user_set_password, reset_password_token: opts[:token])
  tr
    td
      table
        tr
          td.mail-p.small.mail-center
            =I18n.t('copy_paste_link')
            br
            =expand_uri_template(:user_set_password, reset_password_token: opts[:token])
